<!DOCTYPE html>
<html>
<head>
  <title>민족사관고등학교 동문회</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <%= favicon_link_tag asset_path('kmla.ico') %>
</head>
<body>
  <% if @notice %>
    <div id='notice'><%= @notice %></div>
  <% end %>
  <%= render partial:'layouts/horizontalbar' %>
  <div id='wrapper'>
    <div id='main_container', class='shadow'>
         <%= yield %>     
    </div>
    <div id='dialog_box' style='display:none'>
      <div id='dialog_header'>
        <div id='dialog_title'></div>
      </div>
      <div id='dialog_content'>
         Loading...
      </div>
      <div id='dialog_footer'>
        <div id='dialog_close_link'><%= link_to '닫기', '#', id: 'dialog_close_link' %></div>
      </div>
    </div>
  </div>
  
  <script type="text/javascript">
      
    var timezone = jstz.determine();
    document.cookie = 'time_zone='+timezone.name()+';';
    
    $('body').on('focus', 'textarea', function(){
      $(this).autosize();  
    });
    
    $('body').on('keydown', '.comment_textarea', function (e) {
      if (e.which == 13) {
        e.preventDefault();
        $(this).closest('form').submit();
      }
    });
    
    $('body').on('click', '.get_likes_link', function(event) {
      event.preventDefault();
      $('#dialog_box').show();
      $.ajax({ 
        url: this.href,
        type: 'get',
        dataType: 'script'
      });
    });
    
    /* If Scroll is not top, make Nav Bar opaque */ 
      $(window).scroll(function () {
       if ($(this).scrollTop()==0){ 
         $("#horizontalbar_container").css("opacity","1.0");
         $("#logo_bar_container").css("height","120px");  
       }
       else{
         $("#horizontalbar_container").css("opacity","0.5");
           
       }
     });

     /* If User puts mouse on Nav Bar, make Nav Bar not opaque */ 
    $("#horizontalbar_container").hover(
    function () {
       $(this).css("opacity","1.0");
     },  
     function () {
        if ($(window).scrollTop()!=0){ 
           $(this).css("opacity","0.5");
         }
     }
     );
     /* If User puts mouse on Title of Nav Bar , show SubList */      
    $('#horizontalbar li').hover(
      function () {
         $('ul',this).fadeIn();
       },  
       function () {
         $('ul',this).fadeOut();
       }
     );
    
    $('body').on('click', '#dialog_close_link', function(event){
      event.preventDefault();
      $('#dialog_title').html('');
      $('#dialog_content').html('Loading...');
      $('#dialog_box').hide();
    });
      
    $(document).ready( function() {
      $('input, textarea').placeholder();
      $('li ul','#horizontalbar').hide();
      $('body').css("background", "#E8EFF7");
    });
   
  </script>
